{
    "$schema": "http://json.schemastore.org/template",
    "author": "henry-js",
    "classifications": [
        "Common",
        "Console",
        "TUI"
    ],
    "name": "Terminal.Gui TUI Application",
    "description": "Scaffold a Terminal.Gui v2 TUI application with MVVM pattern",
    "identity": "henry-js.TUI.Console",
    "shortName": "catui",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "CATui",
    "preferNameDirectory": true,
    "sources": [
        {
            "source": "./",
            "target": "./",
            "exclude": [
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                ".template.config/**/*",
                "**/*.filelist",
                "**/*.user",
                "**/*.lock.json"
            ]
        }
    ],
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net10.0",
                    "description": "Target .NET 10.0"
                },
                {
                    "choice": "net9.0",
                    "description": "Target .NET 9.0"
                }
            ],
            "defaultValue": "net10.0",
            "replaces": "net10.0"
        }
    }
}
